---
export interface Props {
    selectedId: String;
}
const { selectedId } = Astro.props as Props;

---

<header>
    <nav>
        <ul>
            <li><a class:list={[{ selected: (selectedId==='home' ) }]} href="/">Home</a></li>
            <li><a class:list={[{ selected: (selectedId==='about' ) }]} href="/about">About</a></li>
        </ul>
    </nav>
</header>

<style is:global lang="scss">
    header {
        ul {
            list-style-type: none;

            li {
                float: left;
                margin-right: 20px;

                a {
                    display: inline-block;
                    padding: 10px;
                    text-decoration: none;

                    &.selected {
                        text-decoration: underline;
                    }
                }
            }
        }
    }
</style>